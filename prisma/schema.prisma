generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId       Int       @id @default(autoincrement()) @map("user_id")
  email        String    @unique
  passwordHash String    @map("password_hash")
  userName     String    @map("user_name")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  token        Token?
  article      Article[]
  comment      Comment[]
  like         Like[]

  @@map("users")
}

model Token {
  tokenId      Int      @id @default(autoincrement()) @map("token_id")
  user         User     @relation(fields: [userId], references: [userId])
  userId       Int      @unique @map("user_id")
  refreshToken String   @unique @map("refresh_token")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("tokens")
}

model Article {
  articleId Int       @id @default(autoincrement()) @map("articleId")
  user      User      @relation(fields: [userId], references: [userId])
  userId    Int       @map("user_id")
  title     String
  content   String
  isHidden  Boolean   @default(false) @map("is_hidden")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  comment   Comment[]
  like      Like[]

  @@map("articles")
}

model Comment {
  commentId Int      @id @default(autoincrement()) @map("comment_id")
  user      User     @relation(fields: [userId], references: [userId])
  userId    Int      @map("user_id")
  article   Article  @relation(fields: [articleId], references: [articleId])
  articleId Int      @map("article_Id")
  message   String
  isHidden  Boolean  @default(false) @map("is_hidden")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("comments")
}

model Like {
  like_id   Int      @id @default(autoincrement()) @map("like_id")
  user      User     @relation(fields: [userId], references: [userId])
  userId    Int      @map("user_id")
  article   Article  @relation(fields: [articleId], references: [articleId])
  articleId Int      @map("article_Id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("likes")
}
